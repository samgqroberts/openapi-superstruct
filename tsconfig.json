{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}